<UserControl x:Class="DanhosMessages.Components.UserControls.UCMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DanhosMessages.Components.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="Username" Grid.Row="0" FontSize="25">Username</TextBlock>
        <TextBlock x:Name="MessageContent" Grid.Row="1" FontSize="25">This is the message content of "Username"'s message</TextBlock>
    </Grid>
</UserControl>
